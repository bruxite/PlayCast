@html.extend('layout', function(model){
	@html.block('body', function(model){
		@if(model.error){
			<p class="text-error">Error occurred: @model.error</p>
		}

		<div class="row">
			<div class="list-group col-lg-6">
				@model.games.forEach(function(game){
					<a href="#" class="list-group-item list-group-item-info">@game.opponent<span class="badge">@(game.location ? game.location : "Unknown")</span></a>
				})
			</div>
		</div>
	})
})